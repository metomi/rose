#!jinja2
[scheduling]
    [[queues]]
        [[[queue1]]]
            limit = 2  # Only 2 members at one time.
            members = INTERNAL_QUEUES_NS
    [[dependencies]]
        graph = """

                # Start things off with internal_queue_test.
                # queued_task* tasks will be run 2 at a time.

                internal_queue_test => queued_task1 & queued_task2 & \
                                       queued_task3 & queued_task4 & \
                                       queued_task5

                """
    
[runtime]
    [[root]]
        command scripting = "echo Running on $(hostname) in $PWD; sleep 10"
        [[[job submission]]]
            method = at
        [[[event hooks]]]
            succeeded handler = "rose suite-hook"
            failed handler = "rose suite-hook"

    [[INTERNAL_QUEUES_NS]]
    [[queued_task1, queued_task2, queued_task3, queued_task4, queued_task5]]
        inherit = INTERNAL_QUEUES_NS
