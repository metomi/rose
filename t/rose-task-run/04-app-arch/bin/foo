set -eu
FOO=$(basename $0)
FOO_SESSION=${FOO_SESSION:-0}
FOO_RC=${FOO_RC:-0}
echo "$FOO $@ # rc=$FOO_RC" 1>>$FOO.log.$FOO_SESSION
ACTION=$1
shift 1
if [[ $ACTION != 'put' ]]; then
    echo "foo: $ACTION: unknown action" >&2
    exit 1
fi
TARGET=${1#foo://}
mkdir -p $(dirname foo/$TARGET)
shift 1
rsync -a "$@" foo/$TARGET
exit $FOO_RC
