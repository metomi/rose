#!jinja2
[cylc]
    UTC mode=True
    [[events]]
        timeout=PT1M
        abort on timeout=True
[scheduling]
    [[dependencies]]
        graph=archive

[runtime]
    [[archive]]
        script="""
zstd --rm -T4 -f - <<<'MMXVI' >'2016.txt.zst'
mkdir 'whatever'
echo "I don't care." >'whatever/idontcare.txt'
echo "You may be right." >'whatever/youmayberight.txt'
tar -I "zstd --rm -T0" -cf 'whatever.tar.zst' 'whatever'
rm -fr 'whatever'
rose task-run --debug
"""
