#!jinja2
[cylc]
    UTC mode=True
    [[events]]
        timeout=PT1M
        abort on timeout=True
[scheduling]
    [[dependencies]]
        graph=archive

[runtime]
    [[archive]]
        script="""
xz -f - <<<'MMXVI' >'2016.txt.xz'
mkdir 'whatever'
echo "I don't care." >'whatever/idontcare.txt'
echo "You may be right." >'whatever/youmayberight.txt'
tar -I xz -cf 'whatever.tar.xz' 'whatever'
rm -fr 'whatever'
rose task-run --debug
"""
